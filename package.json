{
  "name": "thelounge",
  "description": "The self-hosted Web IRC client",
  "version": "1.5.0",
  "preferGlobal": true,
  "bin": {
    "lounge": "index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thelounge/lounge.git"
  },
  "scripts": {
    "start": "node index",
    "build": "grunt && handlebars client/views/ -e tpl -f client/js/lounge.templates.js",
    "test": "HOME=test/fixtures mocha test/**/*.js && npm run lint",
    "lint": "eslint . && stylelint \"**/*.css\""
  },
  "keywords": [
    "browser",
    "web",
    "chat",
    "client",
    "irc",
    "server"
  ],
  "license": "MIT",
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "cheerio": "0.20.0",
    "commander": "2.9.0",
    "event-stream": "3.3.2",
    "express": "4.13.4",
    "lodash": "4.6.1",
    "irc-framework": "1.0.10",
    "mkdirp": "0.5.1",
    "moment": "2.12.0",
    "read": "1.0.7",
    "request": "2.69.0",
    "slate-irc": "0.8.1",
    "socket.io": "1.4.5",
    "spdy": "3.2.3"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "eslint": "2.4.0",
    "grunt": "0.4.5",
    "grunt-cli": "0.1.13",
    "grunt-contrib-uglify": "1.0.0",
    "grunt-contrib-watch": "1.0.0",
    "handlebars": "4.0.5",
    "mocha": "2.4.5",
    "stylelint": "5.0.1"
  }
}
